#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/outputs.h>

//  Mac
#define M_RDO &kp LS(LG(Z))
#define M_PST &kp LG(V)
#define M_CPY &kp LG(C)
#define M_CUT &kp LG(X)
#define M_UND &kp LG(Z)
#define M_SNX &kp LG(D)
#define M_MNX &kp LA(RIGHT)
#define M_MPR &kp LA(LEFT)
#define M_SAV &kp LG(S)

// Win
#define W_RDO &kp LC(Y)
#define W_PST &kp LC(V)
#define W_CPY &kp LC(C)
#define W_CUT &kp LC(X)
#define W_UND &kp LC(Z)
#define W_SNX &kp LC(D)
#define W_MNX &kp LC(RIGHT)
#define W_MPR &kp LC(LEFT)
#define W_SAV &kp LC(S)

&lt {
    quick_tap_ms = <200>;
};

&mmv {    
    time-to-max-speed-ms = <750>;
    //time-to-max-speed-ms = <500>;
    acceleration-exponent=<1>;
};
&mwh {    
    time-to-max-speed-ms = <2000>;
    acceleration-exponent=<0>;
}; 

  / {

    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
        mot: momentary_layer_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "mot";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&kp>;
        };
    };

    keymap {
      compatible = "zmk,keymap";
      layer0 {
          bindings = <
          &none &kp Q      &kp W      &kp E &kp R              &kp T         &kp Y &kp U        &kp I       &kp O        &kp P              &none
          &none &hm LGUI A &hm LALT S &hm LCTRL D &hm LSHIFT F &kp G         &kp H &hm LSHIFT J &hm LCTRL K &hm LALT L   &hm LGUI SEMICOLON &none
          &none &kp Z      &kp X      &kp C       &kp V        &kp B         &kp N &kp M        &kp COMMA   &kp DOT      &kp SLASH          &to 0
                                  &mot 8 ESC &mot 4 SPACE &mot 7 TAB         &mot 6 ENTER &mot 5 BACKSPACE &mot 7 DELETE
          >;
        };
      layer1 {
          bindings = <
          &trans &trans &trans &trans &trans &trans                 &trans &trans &trans &trans &trans &trans
          &trans &trans &trans &trans &trans &trans                 &trans &trans &trans &trans &trans &trans
          &trans &trans &trans &trans &trans &trans                 &trans &trans &trans &trans &trans &to 0
                           &mot 9 ESC &trans &trans                 &trans &trans &trans
          >;
        };       
      layer2 {
          bindings = <
          &none &kp Q      &kp W      &kp F       &kp P        &kp B         &kp J &kp L        &kp U       &kp Y        &kp SEMICOLON &none
          &none &hm LGUI A &hm LALT R &hm LCTRL S &hm LSHIFT T &kp G         &kp M &hm LSHIFT N &hm LCTRL E &hm LALT I   &hm LGUI O    &none
          &none &kp Z      &kp X      &kp C       &kp D        &kp V         &kp K &kp H        &kp COMMA   &kp DOT      &kp SLASH     &to 0
                                  &mot 8 ESC &mot 2 SPACE &mot 7 TAB         &mot 4 ENTER &mot 3 BACKSPACE &mot 5 DELETE
          >;
        };
      layer3 {
          bindings = <
          &trans &trans &trans &trans &trans &trans                 &trans &trans &trans &trans &trans &trans
          &trans &trans &trans &trans &trans &trans                 &trans &trans &trans &trans &trans &trans
          &trans &trans &trans &trans &trans &trans                 &trans &trans &trans &trans &trans &to 0
                           &mot 9 ESC &trans &trans                 &trans &trans &trans
          >;
        };         
      layer4 {
          bindings = <
          &trans &kp COMMA    &kp N7      &kp N8       &kp N9        &mwh SCROLL_VERT(15)         &kp HOME             &kp PAGE_DOWN        &kp PAGE_UP           &kp END             &mkp MCLK &none
          &trans &hm LGUI DOT &hm LALT N4 &hm LCTRL N5 &hm LSHIFT N6 &mwh SCROLL_VERT(-15)        &kp LEFT             &kp DOWN             &kp UP                &kp RIGHT           &mkp RCLK &sl 7
          &trans &kp N0       &kp N1      &kp N2       &kp N3        &none                        &mmv MOVE_HOR(-3500) &mmv MOVE_VERT(3500) &mmv MOVE_VERT(-3500) &mmv MOVE_HOR(3500) &mkp LCLK &to 0
                                                                     &trans &trans &trans         &kp ENTER &kp BACKSPACE &kp DELETE
          >;
        };
      layer5 {
          bindings = <
          &trans &kp LPAR &kp LBKT  &kp LBRC  &kp LT   &kp EXCL              &kp PLUS         &kp MINUS &kp ASTRK &kp SLASH     &kp EQUAL &none
          &trans &kp RPAR &kp RBKT  &kp RBRC  &kp GT   &kp QMARK             &kp GRAVE        &kp UNDER &kp CARET &kp BACKSLASH &kp HASH  &sl 7
          &trans &none    &kp DLLR  &kp PRCNT &kp AMPS &kp DOUBLE_QUOTES     &kp SINGLE_QUOTE &kp TILDE &kp AT    &kp PIPE      &none     &to 0
                                     &kp ESC &kp SPACE &kp TAB               &trans &trans &trans
          >;
        };
      layer6 {
          bindings = <
          &none &kp PRINTSCREEN &kp F7 &kp F8 &kp F9 &kp F10                 &none          &kp C_VOLUME_DOWN &kp C_VOLUME_UP  &kp C_MUTE         &none &kp C_EJECT
          &none &kp INSERT      &kp F4 &kp F5 &kp F6 &kp F11                 &kp C_PREVIOUS &kp C_STOP        &kp C_PLAY_PAUSE &kp C_NEXT         &none &sl 7
          &none &none           &kp F1 &kp F2 &kp F3 &kp F12                 &kp C_REWIND   &none             &none            &kp C_FAST_FORWARD &none &to 0
                                           &none &none &none                 &none &none &none
          >;
        };
      layer7 {
          bindings = <
          &bt BT_CLR   &out OUT_USB &out OUT_BLE &none        &none &none                 &kp N5 &kp N5 &to 7  &to 8  &to 9  &kp N5
          &none        &bt BT_SEL 4 &none        &none        &none &none                 &none  &none  &to 4  &to 5  &to 6  &none
          &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &none &none                 &none  &to 0  &to 1  &to 2  &to 3  &to 0
                                                        &none &none &none                 &none &none &none
          >;
        };
      layer8 {
          bindings = <
          &none &kp N8    &kp N8    &kp N8    &kp N8    &kp N8         &kp N8    &kp N8 &kp N8 &kp N8    &kp N8 &none
          &none &kp N8    &kp M_SAV &kp N8    &kp N8    &kp A          &kp M_MPR &kp N8 &kp N8 &kp M_MNX &kp N8 &none
          &none &kp M_UND &kp M_CUT &kp M_CPY &kp M_PST &kp M_RDO      &kp N8    &kp N8 &kp N8 &kp N8    &kp N8 &to 0
                                  &none &none &none                    &none &none &none
          >;
        };
      layer9 {
          bindings = <
          &none &kp N8    &kp N8    &kp N8    &kp N8    &kp N8         &kp N8    &kp N8 &kp N8 &kp N8    &kp N8 &none
          &none &kp N8    &kp W_SAV &kp N8    &kp N8    &kp A          &kp W_MPR &kp N8 &kp N8 &kp W_MNX &kp N8 &none
          &none &kp W_UND &kp W_CUT &kp W_CPY &kp W_PST &kp W_RDO      &kp N8    &kp N8 &kp N8 &kp N8    &kp N8 &to 0
                                  &none &none &none                    &none &none &none
          >;
        };
    };
  };

