#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/outputs.h>

&lt {
    quick_tap_ms = <200>;
};

&mmv {    
    time-to-max-speed-ms = <750>;
    //time-to-max-speed-ms = <500>;
    acceleration-exponent=<1>;
};
&mwh {    
    time-to-max-speed-ms = <2000>;
    acceleration-exponent=<0>;
}; 

  / {

    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
        mot: momentary_layer_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "mot";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&kp>;
        };
    };

    keymap {
      compatible = "zmk,keymap";
      layer0 {
          bindings = <
          &none &kp Q      &kp W      &kp E &kp R              &kp T         &kp Y &kp U        &kp I       &kp O        &kp P              &none
          &none &hm LGUI A &hm LALT S &hm LCTRL D &hm LSHIFT F &kp G         &kp H &hm LSHIFT J &hm LCTRL K &hm LALT L   &hm LGUI SEMICOLON &none
          &none &kp Z      &kp X      &kp C       &kp V        &kp B         &kp N &kp M        &kp COMMA   &kp DOT      &kp SLASH          &none
                                  &mot 5 ESC &mot 2 SPACE &mot 7 TAB         &mot 4 ENTER &mot 3 BACKSPACE &mot 6 DELETE
          >;
        };
      layer1 {
          bindings = <
          &none &kp Q      &kp W      &kp F       &kp P        &kp B         &kp J &kp L        &kp U       &kp Y        &kp SEMICOLON &none
          &none &hm LGUI A &hm LALT R &hm LCTRL S &hm LSHIFT T &kp G         &kp M &hm LSHIFT N &hm LCTRL E &hm LALT I   &hm LGUI O    &none
          &none &kp Z      &kp X      &kp C       &kp D        &kp V         &kp K &kp H        &kp COMMA   &kp DOT      &kp SLASH     &none
                                  &mot 5 ESC &mot 2 SPACE &mot 7 TAB         &mot 4 ENTER &mot 3 BACKSPACE &mot 6 DELETE
          >;
        };
      layer2 {
          bindings = <
          &trans &kp COMMA &kp N7 &kp N8 &kp N9 &mwh SCROLL_VERT(15)         &kp HOME             &kp PAGE_DOWN        &kp PAGE_UP           &kp END             &mkp MCLK &none
          &trans &kp DOT   &kp N4 &kp N5 &kp N6 &mwh SCROLL_VERT(-15)        &kp LEFT             &kp DOWN             &kp UP                &kp RIGHT           &mkp RCLK &sl 5
          &trans &kp N0    &kp N1 &kp N2 &kp N3 &none                        &mmv MOVE_HOR(-3500) &mmv MOVE_VERT(3500) &mmv MOVE_VERT(-3500) &mmv MOVE_HOR(3500) &mkp LCLK &to 0
                                                &trans &trans &trans         &kp ENTER &kp BACKSPACE &kp DELETE
          >;
        };
      layer3 {
          bindings = <
          &trans &kp LPAR &kp LBKT  &kp LBRC  &kp LT   &kp EXCL              &kp PLUS         &kp MINUS &kp ASTRK &kp SLASH     &kp EQUAL &none
          &trans &kp RPAR &kp RBKT  &kp RBRC  &kp GT   &kp QMARK             &kp GRAVE        &kp UNDER &kp CARET &kp BACKSLASH &kp HASH  &sl 5
          &trans &none    &kp DLLR  &kp PRCNT &kp AMPS &kp DOUBLE_QUOTES     &kp SINGLE_QUOTE &kp TILDE &kp AT    &kp PIPE      &none     &to 0
                                            &trans &trans &trans             &trans &trans &trans
          >;
        };
      layer4 {
          bindings = <
          &none &kp PRINTSCREEN &kp F7 &kp F8 &kp F9 &kp F10                 &none          &kp C_VOLUME_DOWN &kp C_VOLUME_UP  &kp C_MUTE         &none &kp C_EJECT
          &none &kp INSERT      &kp F4 &kp F5 &kp F6 &kp F11                 &kp C_PREVIOUS &kp C_STOP        &kp C_PLAY_PAUSE &kp C_NEXT         &none &sl 5
          &none &none           &kp F1 &kp F2 &kp F3 &kp F12                 &kp C_REWIND   &none             &none            &kp C_FAST_FORWARD &none &to 0
                                           &none &none &none                 &none &none &none
          >;
        };
      layer5 {
          bindings = <
          &kp N5 &kp N5 &kp N5 &kp N5 &kp N5 &kp N5                          &bt BT_CLR   &out OUT_USB &out OUT_BLE &none        &none &none
          &none  &none  &to 4  &to 5  &none  &none                           &none        &bt BT_SEL 4 &none        &none        &none &none
          &none  &to 0  &to 1  &to 2  &to 3  &none                           &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &none &to 0 
                                 &none &none &none                           &none &none &none
          >;
        };
      layer6 {
          bindings = <
          &kp N6 &kp N6 &kp N6 &kp N6 &kp N6 &kp N6                 &kp N6 &kp N6 &kp N6 &kp N6 &kp N6 &kp N6
          &kp N6 &kp N6 &kp N6 &kp N6 &kp N6  &kp A                 &kp N6 &kp N6 &kp N6 &kp N6 &kp N6 &kp N6
          &tog 7 &none &none &none &none &kp 6                 &kp N6 &kp N6 &kp N6 &kp N6 &kp N6 &kp N6
                                  &none &none &none                 &none &none &none
          >;
        };
      layer7 {
          bindings = <
          &kp N7 &kp N7 &kp N7 &kp N7 &kp N7 &kp N7     &kp N7 &kp N7 &kp N7 &kp N7 &kp N7 &kp N7
         &kp N7 &kp N7 &kp N7 &kp N7 &kp N7 &kp N7     &kp N7 &kp N7 &kp N7 &kp N7 &kp N7 &kp N7
          &tog 7 &none &none &none &none &kp 7     &kp N7 &kp N7 &kp N7 &kp N7 &kp N7 &kp N7
                                  &none &none &none     &none &none &none
          >;
        };
    };
  };

